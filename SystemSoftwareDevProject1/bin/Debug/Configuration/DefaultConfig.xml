<?xml version="1.0" encoding="utf-8" ?>
<defaultconfiguration>
  <!--Defines a list of stocks which should be downloaded by default.-->
  <defaultstocks>
    
    <stock>
      <name>Apple Inc.</name>
      <tag>AAPL</tag>
    </stock>
    
    <stock>
      <name>Microsoft inc.</name>
      <tag>MSFT</tag>
    </stock>

    <stock>
      <name>Google Inc.</name>
      <tag>GOOG</tag>
    </stock>
    
  </defaultstocks>
  
  <!--Default range of dates for downloading-->
  <defaultrange>
    <start>2000,1,1</start>
    <end>TODAY</end>
  </defaultrange>

  <!--Default file paths and their resolutions.-->
  <defaultfilepaths>
    
    <path>
      <resolution>d</resolution>
      <path>C:\DEV\STOCKDATA\Daily</path>
    </path>

    <path>
      <resolution>w</resolution>
      <path>C:\DEV\STOCKDATA\Weekly</path>
    </path>

    <path>
      <resolution>m</resolution>
      <path>C:\DEV\STOCKDATA\Monthly</path>
    </path>

  </defaultfilepaths>
  
</defaultconfiguration>